<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mounth_fragment2_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/mounth_fragment2_bacground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5" >
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/mounth_fragment2_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#cdcdcd" >

            <TextView
                android:id="@+id/mounth_fragment2_name_nounth_and_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/mounth_fragment2_open_left_menu"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/mounth_fragment2_search"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/search"
                android:visibility="gone"  />

            <ImageView
                android:id="@+id/mounth_fragment2_add_event"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/mounth_fragment2_search"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/add_event"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/mounth_fragment2_open_left_menu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/back_to_menu" />

            <Spinner
                android:id="@+id/mounth_fragment2_spinner"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:spinnerMode="dropdown"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:id="@+id/mounth_fragment2_name_days"
                android:layout_width="match_parent"
                android:layout_height="50dp" >
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/mounth_fragment2_name_days"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/mounth_fragment2_mounth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2" >
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5" >
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>