<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/week_fragment_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/week_fragment_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cdcdcd" 
        android:alpha="0.95">

        <TextView
            android:id="@+id/week_fragment_mounth_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/week_fragment_open_left_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/back_to_menu" />

        <Spinner
            android:id="@+id/week_fragment_spinner"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="2dp"
            android:spinnerMode="dropdown"
            android:visibility="invisible" />
        
        <ImageView
                android:id="@+id/week_fragment_add_event"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/add_event_top_base_theme" />
        
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
         >

        <RelativeLayout
            android:id="@+id/week_fragment_week"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/hours" 
        >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/hours"
            android:layout_width="30dp"
            android:layout_height="match_parent" 
            android:alpha="0.5">
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/week_fragment_seek_background"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#000000" 
        android:alpha="0.9">

        <LinearLayout
            android:id="@+id/week_fragment_seek_background_lin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25" >
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5" >

                <SeekBar
                    android:id="@+id/week_fragment_seek"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:max="13" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/week_fragment_text1"
                        android:layout_width="0.0px"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#ffffffff"
                        android:textSize="10.0dip" />

                    <TextView
                        android:id="@+id/week_fragment_text2"
                        android:layout_width="0.0px"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="#ffffffff"
                        android:textSize="10.0dip" />

                    <TextView
                        android:id="@+id/week_fragment_text3"
                        android:layout_width="0.0px"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="#ffffffff"
                        android:textSize="10.0dip" />

                    <TextView
                        android:id="@+id/week_fragment_text4"
                        android:layout_width="0.0px"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="#ffffffff"
                        android:textSize="10.0dip" />

                    <TextView
                        android:id="@+id/week_fragment_text5"
                        android:layout_width="0.0px"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="#ffffffff"
                        android:textSize="10.0dip" />

                    <TextView
                        android:id="@+id/week_fragment_text6"
                        android:layout_width="0.0px"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:text="6"
                        android:textColor="#ffffffff"
                        android:textSize="10.0dip" />

                    <TextView
                        android:id="@+id/week_fragment_text7"
                        android:layout_width="0.0px"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:text="7"
                        android:textColor="#ffffffff"
                        android:textSize="10.0dip" />

                    <TextView
                        android:id="@+id/week_fragment_text8"
                        android:layout_width="0.0px"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:text="8"
                        android:textColor="#ffffffff"
                        android:textSize="10.0dip" />

                    <TextView
                        android:id="@+id/week_fragment_text9"
                        android:layout_width="0.0px"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:text="9"
                        android:textColor="#ffffffff"
                        android:textSize="10.0dip" />

                    <TextView
                        android:id="@+id/week_fragment_text10"
                        android:layout_width="0.0px"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:text="10"
                        android:textColor="#ffffffff"
                        android:textSize="10.0dip" />

                    <TextView
                        android:id="@+id/week_fragment_text11"
                        android:layout_width="0.0px"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:text="11"
                        android:textColor="#ffffffff"
                        android:textSize="10.0dip" />

                    <TextView
                        android:id="@+id/week_fragment_text12"
                        android:layout_width="0.0px"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:text="12"
                        android:textColor="#ffffffff"
                        android:textSize="10.0dip" />

                    <TextView
                        android:id="@+id/week_fragment_text13"
                        android:layout_width="0.0px"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:text="13"
                        android:textColor="#ffffffff"
                        android:textSize="10.0dip" />

                    <TextView
                        android:id="@+id/week_fragment_text14"
                        android:layout_width="0.0px"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:text="14"
                        android:textColor="#ffffffff"
                        android:textSize="10.0dip" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25" >
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>