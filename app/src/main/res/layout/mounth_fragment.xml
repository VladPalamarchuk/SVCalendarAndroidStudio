<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mounth_fragment_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/mounth_fragment_events"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5" >
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mounth_fragment_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/mounth_fragment_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.95" >

            <TextView
                android:id="@+id/mounth_fragment_name_nounth_and_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/mounth_fragment_open_left_menu"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/mounth_fragment_search"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/search_base_theme" />

            <ImageView
                android:id="@+id/mounth_fragment_add_event"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/mounth_fragment_search"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/add_event_top_base_theme" />

            <ImageView
                android:id="@+id/mounth_fragment_open_left_menu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/open_menu_base_them"
                android:visibility="visible" />

            <Spinner
                android:id="@+id/mounth_fragment_spinner"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:spinnerMode="dropdown"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/mounth_fragment_by_name_day"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:alpha="0.5" >
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mounth_fragment_mounth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2" >
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mounth_fragment_background_date"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:alpha="0.95"
                    android:background="#0000ff" >

                    <TextView
                        android:id="@+id/mounth_fragment_selected_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:textColor="#ff000000"
                        android:textSize="18sp" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="12" >

            <ListView
                android:id="@+id/mounth_fragmnet_list_evets"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </ListView>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>